<form class="form-inline" method="POST" action="/changePassword" class="form-inline">
	<input name="username" type="hidden" value="{name}">
	<input name="password" type="password" class="input" placeholder="new password">
	<br />
	<br />
	<input name="password2" type="password" class="input" placeholder="confirm password">
	<br />
	<br />
	<button type="submit" class="btn">Change Password</button>
</form>
