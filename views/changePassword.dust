<form class="form-inline" method="POST" action="changePassword">
	<input name="username" type="hidden" value="{name}">
	<input name="password" type="password" class="input" placeholder="new password"><br />
	<input name="password2" type="password" class="input" placeholder="confirm password"><br />
	<button type="submit" class="btn">change password</button>
</form>
